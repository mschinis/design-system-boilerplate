    "copy-webpack-plugin": "^4.6.0",
    "fibers": "^3.1.1",
    "file-loader": "^3.0.1",
    "postcss-loader": "^3.0.0",
    "sass": "^1.16.0",
    "sass-loader": "^7.1.0",
    "webpack": "^4.28.4",
